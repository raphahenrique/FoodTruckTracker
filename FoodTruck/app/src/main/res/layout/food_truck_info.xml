<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nome_food_truck"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/btn_negativo"
        android:layout_below="@+id/bar_avaliacao"
        android:layout_alignRight="@+id/bar_avaliacao"
        android:layout_alignEnd="@+id/bar_avaliacao"
        android:layout_above="@+id/btn_ok_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:id="@+id/img_foodTruck"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bar_avaliacao"
        android:layout_alignStart="@+id/bar_avaliacao"
        android:layout_alignRight="@+id/btn_positivo"
        android:layout_alignEnd="@+id/btn_positivo" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bar_avaliacao"
        android:layout_below="@+id/img_foodTruck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ok_info"
        android:layout_below="@+id/txt_cardapio_info"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/btn_positivo"
        android:layout_below="@+id/bar_avaliacao"
        android:layout_toLeftOf="@+id/btn_negativo"
        android:layout_toStartOf="@+id/btn_negativo" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_cardapio_info"
        android:textSize="18sp"
        android:layout_below="@+id/btn_positivo"
        android:layout_alignLeft="@+id/bar_avaliacao"
        android:layout_alignStart="@+id/bar_avaliacao" />

</RelativeLayout>