<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_nome_food_truck"
        android:text="TextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/img_foodTruck"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bar_avaliacao"
        android:layout_alignStart="@+id/bar_avaliacao"
        android:layout_alignRight="@+id/btn_positivo"
        android:layout_alignEnd="@+id/btn_positivo"
        />

    <RatingBar
        android:id="@+id/bar_avaliacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_foodTruck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />




    <ImageButton
        android:id="@+id/btn_negativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_below="@+id/bar_avaliacao"
        android:layout_toRightOf="@+id/btn_positivo"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/btn_positivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_below="@+id/bar_avaliacao"
        android:layout_toRightOf="@+id/btn_ok_info"
        android:layout_toEndOf="@+id/btn_ok_info" />

    <Button
        android:id="@+id/btn_ok_info"
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_avaliacao"
        android:layout_alignLeft="@id/bar_avaliacao"
        android:layout_marginLeft="20dip"/>

    <TextView
        android:id="@+id/txt_cardapio_info"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_ok_info"
        android:textSize="18sp"
        android:layout_below="@+id/btn_positivo"
        />
</RelativeLayout>